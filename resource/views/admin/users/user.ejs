<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/user.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <title>User</title>
</head>
<body>
  <header>
    <div class="user" dir="rtl">
      <div class="icon">
      <i class='bx bxs-user-circle user-icon'></i>
      </div>
      <div class="use">
        <h2>Admin</h2>
      </div>
    </div>
    <hr>
    <nav>
      <ul>
        <li style="display: flex;"><i class='bx bx-message-dots list-icon'></i><a href="/admin/tickets">Ticket</a></li>
        <li style="display: flex;"><i class='bx bx-user list-icon'></i><a href="/admin/users">Users</a></li>
        <li style="display: flex;"><i class='bx bx-home list-icon'></i><a href="/admin">Dashboard</a></li>
    </ul>
    </nav>
  </header>
   
  <div class="user-h2">
    <h2>Site users</h2>
  </div>
  <div class="tab">
    <table>
        <thead>
          <tr>
            <th scope="col">User Phone</th>
            <th scope="col">Date</th>
            <th scope="col">Setting</th>
          </tr>
        </thead>
        <% users.docs.forEach(user => { %> 
        <tbody>
          <tr>
            <td scope="row"><%= user.phone %></td>
            <td><%= date(user.createdAt).fromNow() %></td>
            
              <form action="/admin/users/<%= user.id %>?_method=DELETE" method="post">
                  <div class="btn-group btn-group-sm">
                    <td><button class="del">Delete</button></td>
                  </div>
              </form>
          
      </tr>
    </tbody>
  <% }) %>
  </div>
  
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

</body>
</html>